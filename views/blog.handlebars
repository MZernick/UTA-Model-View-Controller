<div class="text-center blog-item">
  <h2>{{post_title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
<form class="new-comment-form">
<div class="input-group mb-3">
  <span class="input-group-text" id="inputGroup-sizing-default">Leave a Comment</span>
  <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="comment">
</div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
    </form>
  <div class="col-md-6 comment-list">
    <h3>Comments:</h3>
    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/comment/{{id}}">{{notes}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/comment.js"></script>
